<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cslg.graduation.dao.UserMapper">

    <sql id="insertFields">
        username, password, status, create_date, major, identity_card, phone, email, name, header_url, clothing_size, gender, is_score
    </sql>

    <sql id="selectFields">
         username, password, status, create_date, major, identity_card, phone, email, name, header_url, clothing_size, gender, is_score
    </sql>

    <select id="selectByUsername" resultType="User">
        select <include refid="selectFields"></include>
        from user
        where username = #{username}
    </select>

    <select id="selectByName" resultType="User">
        select <include refid="selectFields"></include>
        from user
        where name = #{name}
    </select>

<!--    <select id="selectByEmail" resultType="User">-->
<!--        select <include refid="selectFields"></include>-->
<!--        from user-->
<!--        where email = #{email}-->
<!--    </select>-->
    
    <insert id="insertUser" parameterType="User">
        insert into user (<include refid="insertFields"></include>)
        values(#{username}, #{password}, #{status}, #{create_date}, #{major}, #{identity_card}, #{phone}, #{email}, #{name}, #{header_url}, #{clothing_size}, #{gender})
    </insert>

    <update id="updateStatus">
        update user set status = #{status}
        where id = #{id}
    </update>

    <update id="updateHeader">
        update user set header_url = #{headerUrl}
        where id = #{id}
    </update>

    <update id="updatePassword">
        update user set password = #{password}
        where id = #{id}
    </update>
    
    <select id="selectIsScoreUsers" resultType="String">
        select username
        from user
        where is_score = 1
    </select>



</mapper>